<div class="colxl-4 col-md-6 mx-auto mt-5">
    <div class="card">
        <div class="card-header">
            <h2>Cadastro</h2>
        </div>
        <div class="card-body">
            <form name="atualizar" method="POST" action="controllerAtualizar">
                <input type="hidden" name="id" id="id" value="{{id}}">
                <div class="form-group">
                    <label for="nome">Nome: <sup class="text-danger">*</sup></label>
                    <input type="text" name="nome" id="nome" class="form-control" value="{{nome}}">
                </div>
                <div class="form-group">
                    <label for="email">Email: <sup class="text-danger">*</sup></label>
                    <input type="email" name="email" id="email" class="form-control" value="{{email}}">
                </div>

                <div class="row justify-content-sm-center">
                    <div class="col-4">
                        <input type="submit" value="Atualizar" class="btn btn-info btn-block">
                    </div>
                    <div class="col-4">
                        <a href="/" class="btn btn-danger btn-block">Cancelar</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>